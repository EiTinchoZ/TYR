# TYR Backend - Configuración de Entorno
# Copia este archivo a .env y configura tus valores

# Servidor
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS - Orígenes permitidos (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Modelo BERT
MODEL_PATH=../modelo_bert_tyr_10_clases_COMPLETO
CONFIDENCE_THRESHOLD=0.7

# Base de Conocimiento
KNOWLEDGE_BASE_PATH=../data/carreras_itse.json

# Logs
LOG_LEVEL=INFO
LOG_FILE=tyr_backend.log

# Analytics (opcional)
ENABLE_ANALYTICS=False
ANALYTICS_DB_PATH=analytics.db
